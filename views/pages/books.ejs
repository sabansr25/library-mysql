<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>

</head>

<body class="container">

    <header>
        <%- include('../partials/headermain'); %>
    </header>
<main>
    <div style="margin-top: 50px;">
        <h1>Book List</h1>
        <div style="border: dotted; padding: 30px; height: fit-content; width: fit-content;">

       
        <% if (books && books.length> 0) { %>
            <ul>
                <% books.forEach(book=> { %>
                    <li>
                        <strong>ID:</strong>
                        <%= book.id %>,
                        <strong>Title:</strong>
                        <%= book.title %>,
                            <strong>Author:</strong>
                            <%= book.author %>,
                                <strong>Year:</strong>
                                <%= book.year %>
                    </li>
                    <% }); %>
            </ul>
            <% } else { %>
                <p>No books available.</p>
                <% } %> 
            </div>
    </div>
</main>

    <footer>

    </footer>

</body>

</html>